<hibernate-configuration>
    <session-factory>
        <!-- Conexão com o banco -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/loja</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">1234</property>

        <!-- Dialeto PostgreSQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Criação/atualização automática das tabelas -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mostrar SQL no console -->
        <property name="hibernate.show_sql">true</property>

        <!-- Aqui serão adicionadas as classes mapeadas -->
        <mapping class="lojaConsole.Produto"/>
    </session-factory>
</hibernate-configuration>